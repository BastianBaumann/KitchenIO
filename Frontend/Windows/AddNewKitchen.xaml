<Window x:Class="Frontend.Windows.AddNewKitchen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Frontend.Windows"
        mc:Ignorable="d"
        Title="AddNewKitchen" Height="187" Width="228">
    <Grid>
        <StackPanel Margin="10">
            <TextBox x:Name="NameTextBox" Margin="0,10,0,10" Text="Enter Kitchen Name.." Width="200"/>
            <TextBox x:Name="DescriptionTextBox" Margin="0,0,0,10" Text="Enter Kitchen Description.." Width="200" Height="73"/>
            <StackPanel Margin="0,0,0,0" Orientation="Horizontal" >
                <Button Content="Save" Click="OkButton_Click" Margin="5"/>
                <Button Content="Cancel" Click="CancelButton_Click" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
